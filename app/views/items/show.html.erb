<div class="flex flex-col items-center px-4 py-6">
  <!-- 戻る・編集ボタン -->
  <h1 class="text-2xl font-bold text-gray-800 mb-6 ">
    <%= t('items.show.title') %>
  </h1>
  <div class="mb-4 flex flex-wrap gap-3 justify-center">
    <%= link_to t('items.show.back_memo'), items_path,
      class: "px-4 py-2 bg-gray-500 text-white rounded-lg shadow hover:bg-gray-600 text-base sm:text-lg" %>

    <%= link_to t('items.show.edit'), edit_item_path(@item),
      class: "px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600 text-base sm:text-lg" %>
  </div>

  <!-- 商品詳細コンテナ -->
  <div class="w-full max-w-xl bg-white border rounded-2xl shadow p-6 text-center">
    <h1 class="text-2xl sm:text-3xl font-bold mb-6 break-words">
      <%= @item.title.presence || t('items.show.item_title') %>
    </h1>

    <!-- URL -->
    <p class="mb-4 text-lg sm:text-xl break-words">
      <strong>URL：</strong>
      <% if @item.url.present? %>
        <%= link_to @item.url, @item.url,
          target: "_blank",
          rel: "noopener",
          class: "text-blue-600 underline break-all" %>
      <% else %>
        <%= t('items.show.item_text') %>
      <% end %>
    </p>

    <!-- メモ -->
    <p class="mb-4 text-lg sm:text-xl break-words">
      <strong>
      <%= t('items.show.memo') %>：
      </strong>
      <%= @item.memo.presence || t('items.show.no_memo') %>
    </p>
    
    <!-- タグ -->
    <p class="mb-4 text-lg sm:text-xl break-words">
      <strong>
      <%= t('items.show.tag') %>：
      </strong>
      <% if @item.tag.present? %>
        <%= link_to @item.tag.name, tag_items_path(@item.tag.id),
          class: "inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded mb-1" %>
      <% else %>
        <%= t('items.show.no_tag') %>
      <% end %>
    </p>

    <!--リマインダー（予定日）-->
    <p class="mb-4 text-lg sm:text-xl break-words">
      <strong>
      <%= t('items.show.reminder') %>:
      </strong>
       <%= @reminder&.scheduled_date&.strftime("%Y-%m-%d") || t('items.show.no_reminder') %>

    </p>


  <!-- 削除ボタン -->
  <div class="mt-6">
    <%= link_to t('items.show.delete'),
        item_path(@item),
        data: { turbo_method: :delete, turbo_confirm: t('items.show.delete_text') },
        class: "px-5 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 text-base sm:text-lg" %>
  </div>
</div>