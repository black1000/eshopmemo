<div class="flex gap-4 mb-6">
  <%= link_to "← 商品一覧へ戻る", items_path,
      class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors duration-200" %>
</div>

<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">
    タグ一覧
  </h1>

  <% if @tags.present? %>
    <div class="flex flex-wrap gap-3 justify-center">
      <% @tags.each_with_index do |tag, i| %>
        <% tag_color =
            if i < 3
              "bg-blue-100 text-blue-800 hover:bg-blue-200"
            elsif i < 6
              "bg-green-100 text-green-800 hover:bg-green-200"
            else
              "bg-orange-100 text-orange-800 hover:bg-orange-200"
            end %>

        <%= link_to "#{tag.name} (#{tag.items.count})", tag_items_path(tag.id),
            class: "inline-block px-4 py-2 rounded-full font-medium shadow-sm transition-all duration-200 transform hover:scale-105 #{tag_color}" %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-600">タグが登録されていません。</p>
  <% end %>
</div>