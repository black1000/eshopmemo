<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-800">商品一覧</h1>
</div>

<div class="flex flex-col lg:flex-row items-start gap-6 mt-6">
  <div class="w-full lg:w-3/4">
    <% @items.each do |item| %>
      <div class="mb-4 rounded-xl border border-gray-200 bg-white p-4 shadow hover:shadow-md transition">
        <!-- スマホでは縦 / PCでは横 -->
        <div class="flex flex-col lg:flex-row items-center lg:items-start gap-4">
          
          <!-- 商品画像 -->
          <%= link_to item.url, target: "_blank", class: "w-full lg:w-1/4" do %>
            <% if item.image.attached? %>
              <%= image_tag item.image.variant(resize_to_limit: [400, 400]),
                  class: "rounded-lg w-full h-48 object-cover lg:h-32" %>
            <% else %>
              <%= image_tag "no_image.png",
                  class: "rounded-lg w-full h-48 object-cover lg:h-32 opacity-60" %>
            <% end %>
          <% end %>

          <!-- 商品情報 -->
          <div class="flex-1 text-center lg:text-left">
            <h2 class="text-lg font-semibold text-blue-700 hover:underline break-words">
              <%= link_to (item.title.presence || "タイトルなし"), item.url, target: "_blank" %>
            </h2>

            <p class="text-sm text-gray-600 mt-1">
              メモ：<%= item.memo.presence || "メモなし" %>
            </p>

            <div class="mt-2">
              <%= link_to "詳細を見る", item_path(item),
                  class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= paginate @items %>
  </div>
</div>