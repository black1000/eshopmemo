<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    商品一覧
  </h1>
</div>

<div class="flex flex-col lg:flex-row items-start gap-6 mt-6">
  <!-- 商品一覧 -->
  <div class="w-full lg:w-3/4">
    <% @items.each do |item| %>
      <div class="mb-4 rounded-xl border border-gray-200 bg-white p-4 shadow hover:shadow-md transition">
        <h2 class="text-lg font-semibold text-blue-700 hover:underline">
          <%= link_to (item.title.presence || "タイトルなし"), item.url, target: "_blank" %>
        </h2>

        <p class="text-sm text-gray-600 mt-1">
          メモ：<%= item.memo.presence || "メモなし" %>
        </p>

        <div class="mt-2">
          <%= link_to "詳細を見る", item_path(item),
              class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
        </div>
      </div>
    <% end %>

    <%= paginate @items %>
  </div>
</div>