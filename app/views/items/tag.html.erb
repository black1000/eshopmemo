<div class="flex gap-4 mb-4">
  <% if request.referer.present? && request.referer != request.url %>
    <%= link_to "詳細へ戻る", :back, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  <% end %>

  <%= link_to "商品一覧へ戻る", items_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
</div>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    <% if @tag %>
      「<%= @tag.name %>」の商品一覧
    <% else %>
      タグ検索
    <% end %>
  </h1>
</div>


<% if @tags.any? %>
<% @tags.each do |tag| %>
  <%= link_to tag.name, tag_items_path(tag.id),
        class: "inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded mb-1" %>
    <% end %>
  <% else %>
   <p>タグが登録されていません。</p>
<% end %>

<div class="flex flex-col lg:flex-row items-start gap-6 mt-6">
  <div class="w-full lg:w-3/4">
    <% if @items.present? %>
      <% @items.each do |item| %>
        <div class="mb-4 rounded-xl border border-gray-200 bg-white p-4 shadow hover:shadow-md transition">
          <div class="flex flex-col lg:flex-row items-center lg:items-start gap-4">

            <!-- 商品画像 -->
            <%= link_to (item.url.presence || "#"), target: "_blank", class: "w-full lg:w-1/4" do %>
              <% if item.image.attached? %>
                <%= image_tag url_for(item.image),
                    class: "rounded-lg w-full h-48 object-cover lg:h-32" %>
              <% else %>
                <%= image_tag "no_image.png",
                    class: "rounded-lg w-full h-48 object-cover lg:h-32 opacity-60" %>
              <% end %>
            <% end %>

            <!-- 商品情報 -->
            <div class="flex-1 text-center lg:text-left">
              <h2 class="text-lg font-semibold text-blue-700 hover:underline break-words">
                <%= link_to (item.try(:title).presence || "タイトルなし"), (item.url.presence || "#"), target: "_blank" %>
              </h2>

              <p class="text-sm text-gray-600 mt-1">
                メモ：<%= item.try(:memo).presence || "メモなし" %>
              </p>

              <div class="mt-2">
                <%= link_to "詳細を見る", item_path(item),
                    class: "text-sm text-gray-500 hover:text-gray-700 underline" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @items %>
    <% else %>
      <p class="text-gray-600 text-center mt-8">まだ商品が登録されていません。</p>
    <% end %>
  </div>
</div>
