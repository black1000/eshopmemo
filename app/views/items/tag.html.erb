<div class="flex gap-4 mb-4">
  <% if request.referer.present? && request.referer != request.url %>
    <%= link_to t('items.tag.back_detail'), :back, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  <% end %>

  <%= link_to t('items.tag.back_memo'), items_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
</div>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    <% if @tag %>
      „Äå<%= @tag.name %>„Äç<%= t('items.tag.tag_name_text') %>
    <% else %>
      <%= t('items.tag.tag_search') %>
    <% end %>
  </h1>
</div>

<% unless action_name == 'tag' %>
  <% if @tags.any? %>
    <% @tags.each do |tag| %>
      <%= link_to tag.name, tag_items_path(tag.id),
            class: "inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded mb-1" %>
    <% end %>
  <% else %>
    <p>
      <%= t('items.tag.text') %>
    </p>
  <% end %>
<% end %>

<!-- ÂïÜÂìÅ‰∏ÄË¶ß -->
<div class="mt-6">
  <% if @items.present? %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

      <% @items.each do |item| %>
        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow hover:shadow-md transition">

          <!-- ÁîªÂÉèÔºàÁ∏¶„É¨„Ç§„Ç¢„Ç¶„ÉàÔºâ -->
          <% if item.image.attached? %>
            <%= image_tag url_for(item.image), class: "rounded-lg w-full h-40 object-cover mb-3" %>
          <% else %>
            <%= image_tag "no_image.png", class: "rounded-lg w-full h-40 object-cover opacity-60 mb-3" %>
          <% end %>

          <!-- „Çø„Ç§„Éà„É´ -->
          <h2 class="text-lg font-semibold text-blue-700 hover:underline break-words">
            <%= link_to (item.title || t('items.tag.no_title')), (item.url || "#"), target: "_blank" %>
          </h2>

          <!-- „É°„É¢ -->
          <p class="text-sm text-gray-600 mt-1 break-all whitespace-normal">
            <%= t('items.tag.memo') %>Ôºö<%= item.memo.presence || t('items.tag.no_memo') %>
          </p>

          <!-- Êó•‰ªò -->
          <p class="text-sm text-gray-600 mt-1">
            üìÖ <%= item.reminder&.scheduled_date&.strftime("%Y-%m-%d") || t('items.tag.no_date') %>
          </p>

          <!-- Ë©≥Á¥∞ -->
          <%= link_to t('items.tag.detail'), item_path(item), class: "text-sm text-gray-500 hover:text-gray-700 underline mt-2 inline-block" %>

        </div>
      <% end %>

    </div>

    <!-- „Éö„Éº„Ç∏„Éç„Éº„Ç∑„Éß„É≥ -->
    <div class="mt-6">
      <%= paginate @items %>
    </div>

  <% else %>
    <p class="text-gray-600 text-center mt-8 col-span-3">
      <%= t('items.tag.no_item') %>
    </p>
  <% end %>
</div>
