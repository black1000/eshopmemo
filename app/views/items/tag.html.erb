<div class="flex gap-4 mb-4">
  <% if request.referer.present? && request.referer != request.url %>
    <%= link_to "詳細へ戻る", :back, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  <% end %>

  <%= link_to "← 商品一覧へ戻る", items_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
</div>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    <% if @tag %>
      「<%= @tag.name %>」の商品一覧
    <% else %>
      タグ検索
    <% end %>
  </h1>
</div>

<% unless action_name == 'tag' %>
  <% if @tags.any? %>
    <% @tags.each do |tag| %>
      <%= link_to tag.name, tag_items_path(tag.id),
            class: "inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded mb-1" %>
    <% end %>
  <% else %>
    <p>タグが登録されていません。</p>
  <% end %>
<% end %>

<!-- 商品一覧 -->
<div class="mt-6">
  <% if @items.present? %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

      <% @items.each do |item| %>
        <div class="rounded-xl border border-gray-200 bg-white p-4 shadow hover:shadow-md transition">

          <!-- 画像（縦レイアウト） -->
          <% if item.image.attached? %>
            <%= image_tag url_for(item.image), class: "rounded-lg w-full h-40 object-cover mb-3" %>
          <% else %>
            <%= image_tag "no_image.png", class: "rounded-lg w-full h-40 object-cover opacity-60 mb-3" %>
          <% end %>

          <!-- タイトル -->
          <h2 class="text-lg font-semibold text-blue-700 hover:underline break-words">
            <%= link_to (item.title || "タイトルなし"), (item.url || "#"), target: "_blank" %>
          </h2>

          <!-- メモ -->
          <p class="text-sm text-gray-600 mt-1 break-all whitespace-normal">
            メモ：<%= item.memo.presence || "メモなし" %>
          </p>

          <!-- 日付 -->
          <p class="text-sm text-gray-600 mt-1">
            📅 <%= item.reminder&.scheduled_date&.strftime("%Y-%m-%d") || "日付なし" %>
          </p>

          <!-- 詳細 -->
          <%= link_to "詳細を見る", item_path(item), class: "text-sm text-gray-500 hover:text-gray-700 underline mt-2 inline-block" %>

        </div>
      <% end %>

    </div>

    <!-- ページネーション -->
    <div class="mt-6">
      <%= paginate @items %>
    </div>

  <% else %>
    <p class="text-gray-600 text-center mt-8 col-span-3">まだ商品が登録されていません。</p>
  <% end %>
</div>
