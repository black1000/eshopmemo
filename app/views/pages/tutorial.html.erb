<div class="max-w-3xl mx-auto mt-10 px-4">

  <h1 class="text-3xl font-bold mb-3">
    <%= t("pages.tutorial.title") %>
  </h1>
  <p class="text-gray-500 mb-10">
    <%= t("pages.tutorial.subtitle") %>
  </p>

  <!-- Section 1 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      1. <%= t("pages.tutorial.login.title") %>
    </h2>
    <p class="leading-relaxed text-gray-700">
      <%= t("pages.tutorial.login.text1") %><br>
      <%= t("pages.tutorial.login.text2") %>
    </p>
  </section>

  <!-- Section 2 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      2. <%= t("pages.tutorial.memo.title") %>
    </h2>

    <p class="leading-relaxed text-gray-700 mb-3">
      <%= t("pages.tutorial.memo.text1") %><br>
      <%= t("pages.tutorial.memo.text2") %>
    </p>

    <div class="bg-gray-100 border border-gray-300 rounded-md p-4 text-sm text-gray-700">
      <%= t("pages.tutorial.memo.notice_html") %>
    </div>
  </section>

  <!-- Section 3 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      3. <%= t("pages.tutorial.tags.title") %>
    </h2>

    <p class="leading-relaxed text-gray-700">
      <%= t("pages.tutorial.tags.text1") %><br>
      <%= t("pages.tutorial.tags.text2") %>
    </p>

    <p class="leading-relaxed text-gray-700 mt-3">
      <%= t("pages.tutorial.tags.text3_html") %>
    </p>

    <div class="bg-gray-100 border border-gray-300 rounded-md p-4 text-sm text-gray-700 mt-4">
      <%= t("pages.tutorial.tags.notice") %>
    </div>
  </section>

  <!-- Section 4 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      4. <%= t("pages.tutorial.edit.title") %>
    </h2>
    <p class="leading-relaxed text-gray-700">
      <%= t("pages.tutorial.edit.text1") %><br>
      <%= t("pages.tutorial.edit.text2") %>
    </p>
  </section>

  <!-- Section 5 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      5. <%= t("pages.tutorial.reminder.title") %>
    </h2>

    <p class="leading-relaxed text-gray-700 mb-3">
      <%= t("pages.tutorial.reminder.text1") %><br>
      <%= t("pages.tutorial.reminder.text2") %>
    </p>

    <div class="bg-gray-100 border border-gray-300 rounded-md p-4 text-sm text-gray-700">
      <%= t("pages.tutorial.reminder.notice_html") %>
    </div>
  </section>

  <!-- Section 6 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      6. <%= t("pages.tutorial.account_delete.title") %>
    </h2>
    <p class="leading-relaxed text-gray-700">
      <%= t("pages.tutorial.account_delete.text1") %><br>
      <%= t("pages.tutorial.account_delete.text2") %>
    </p>
  </section>

  <!-- Section 7 -->
  <section class="mb-10">
    <h2 class="text-xl font-semibold border-l-4 border-yellow-500 pl-3 mb-3">
      7. <%= t("pages.tutorial.pwa.title") %>
    </h2>

    <p class="leading-relaxed text-gray-700 mb-3">
      <%= t("pages.tutorial.pwa.text") %>
    </p>

    <%= link_to t("pages.tutorial.pwa.link"),
        pages_pwa_path,
        class: "text-blue-600 underline" %>
  </section>
  <% if user_signed_in? %>
    <div class="mt-12 text-center">
      <%= link_to t("pages.tutorial.back_to_items"), items_path,
        class: "inline-block bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg shadow" %>
    </div>
  <% else %>
    <div class="mt-12 text-center">
      <%= link_to t("pages.tutorial.back_to_top"), root_path,
        class: "inline-block bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg shadow" %>
    </div>
  <% end %>
</div>