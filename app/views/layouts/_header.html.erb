<header class="app-header">
  <div class="nav-bar">

    <!-- ロゴ -->
    <div class="logo">
      <span class="logo-link">eShopMemo</span>
    </div>

    <% if user_signed_in? %>
      <!-- 左に表示されるメニュー -->
      <div class="nav-links">
        <%= link_to t('layouts.header.new_item'), new_item_path, class: "nav-item" %>
        <%= link_to t('layouts.header.tag_list'), tags_path, class: "nav-item" %>

        <span class="user-info nav-item">
          <%= t('layouts.header.login') %>
        </span>
      </div>
    <% end %>

    <!-- ハンバーガー -->
    <div class="hamburger" id="hamburger">
      ☰
    </div>

  </div>

  <!-- ハンバーガーメニュー内容 -->
  <div class="hamburger-menu" id="hamburger-menu">
    <ul>
      <li><%= link_to t('layouts.header.tutorial'), tutorial_path %></li>

      <% if user_signed_in? %>
        <li><%= link_to t('layouts.header.account_delete'), user_registration_path,
              data: { turbo_confirm: t('layouts.header.delete_text'), turbo_method: :delete } %></li>
        <li><%= link_to t('layouts.header.logout'), destroy_user_session_path,
              data: { turbo_method: :delete } %></li>
      <% else %>
        <li><%= button_to t('layouts.header.google_login'), user_google_oauth2_omniauth_authorize_path,
              method: :post, class: "nav-item", data: { turbo: false } %></li>
      <% end %>
    </ul>
  </div>
</header>