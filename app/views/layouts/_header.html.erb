<header class="app-header">
  <div class="nav-bar">

    <!-- ロゴ -->
    <div class="logo">
      <span class="logo-link">eShopMemo</span>
    </div>

    <% if user_signed_in? %>
      <!-- 左に表示されるメニュー -->
      <div class="nav-links">
        <%= link_to "+ 商品メモ追加", new_item_path, class: "nav-item" %>
        <%= link_to "タグ一覧", tags_path, class: "nav-item" %>

        <span class="user-info nav-item">ログイン中</span>
      </div>
    <% end %>

    <!-- ハンバーガー -->
    <div class="hamburger" id="hamburger">
      ☰
    </div>

  </div>

  <!-- ハンバーガーメニュー内容 -->
  <div class="hamburger-menu" id="hamburger-menu">
    <ul>
      <li><%= link_to "使い方", tutorial_path %></li>

      <% if user_signed_in? %>
        <li><%= link_to "アカウント削除", user_registration_path,
              data: { turbo_confirm: "本当に削除しますか？", turbo_method: :delete } %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path,
              data: { turbo_method: :delete } %></li>
      <% else %>
        <li><%= button_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path,
              method: :post, class: "nav-item", data: { turbo: false } %></li>
      <% end %>
    </ul>
  </div>
</header>